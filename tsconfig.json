{
  "compilerOptions": {
    "module": "commonjs",
    "removeComments": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "incremental": true,
    "strict": true,
    "allowJs": false,
    "plugins": [
      {
        "name": "@nestjs/swagger/plugin"
      }
    ]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
